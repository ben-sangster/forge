%html(xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en")
  %head
    %title= [@title, "DMZ Forge"].compact.join(": ")
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/screen.css", :type => "text/css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/print.css", :type => "text/css", :media => "print"}
    <!--[if lt IE 8]>
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/ie.css", :type => "text/css", :media => "screen, projection"}
    <![endif]-->
    %link{:rel => "stylesheet", :href => "/stylesheets/blueprint/plugins/fancy-type/screen.css", :type => "text/css", :media => "screen, projection"}
    %link{:rel => "stylesheet", :href => "/stylesheets/style.css", :type => "text/css", :media => "screen, projection"}
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => "/javascript/jquery.cycle.all.2.72.js", :type => "text/javascript"}
    %script{:type => "text/javascript"}
      :plain
        $(document).ready(function() {
          $('.slideshow').cycle({
            fx: 'fade',
            timeout: 500,
            speed: 0,
          });
        });

%body
  .container
    %br
    %hr
    #header.span-24.last
      #logo.span-14
        %h1 DMZ Forge*
        %h3.alt *Some Assembly Required
      #search.span-10.last
        %form{:method => "get", :action => "/search", :id => "search-form"}
          %input.title{:type => "text", :value => "", :name => "q"}
          %input.button{:type  => "submit", :value => "Search"}
        %a{:href => '/'} Home
        |
        %a{:href => '/search/advanced'} Advanced Search
    %hr
    #content.span-24.last
      = yield
    %hr
    #footer.span-24.last
      %h3.alt powered by DMZ


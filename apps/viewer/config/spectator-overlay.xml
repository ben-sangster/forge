<?xml version="1.0" encoding="utf-8"?>
<dmz>
<plugin-list>
   <plugin name="dmzRenderModuleOverlayOSG" scope="overlay"/>
</plugin-list>
<javascript>
   <instance name="spectatorOverlay"/>
</javascript>
<overlay>
   <color name="text color" r="0" g="0.75" b="0" a="0.5"/>
   <color name="spectator ring color" r="0" g="0.75" b="0" a="0.5"/>
   <layout node="spectator info">
      <x type="absolute" value="4"/>
      <y type="relative" value="0"/>
   </layout>
   <auto-scale node="spectator info">
      <y type="simple" ratio=".2" size="200" min="100" max="200"/>
   </auto-scale>
   <node type="transform" name="spectator info">
      <position x="0" y="0"/>
      <node type="text" name="mode">
         <text value="Mode:"/>
         <position x="0" y="100"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="object">
         <text value="Obj :"/>
         <position x="0" y="68"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="position">
         <text value="POS :"/>
         <position x="0" y="36"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
      <node type="text" name="orientation">
         <text value="ORI :"/>
         <position x="0" y="4"/>
         <font resource="font"/>
         <height value="32"/>
         <color name="text color"/>
      </node>
   </node>
</overlay>
</dmz>
